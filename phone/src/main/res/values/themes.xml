<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RokidHud" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#00E676</item>
        <item name="colorPrimaryVariant">#00C853</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="colorSecondary">#448AFF</item>
        <item name="colorSecondaryVariant">#2962FF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#E0E0E0</item>
        <item name="colorError">#CF6679</item>
        <item name="android:windowBackground">#121212</item>
        <item name="android:statusBarColor">#0A0A0A</item>
        <item name="android:navigationBarColor">#0A0A0A</item>
    </style>

    <style name="CardSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_card</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SectionTitle">
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTint">#00E676</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="backgroundTint">#2A2A2A</item>
        <item name="android:textColor">#00E676</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ToggleRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
